<header class="page-header">
<h1>Transactions</h1>
<%= link_to "SIGN OUT", destroy_user_session_path, method: :delete, class: "btn-icon" %>
</header>
<section>
<div class="top-card">
<span class="primary-text">Total amount</span>
<span class="sec-text"><%= @group.total_amount %></span>
</div>
<div class="cards-container transactions-container">
<%= @group_entities.each do |entity| %>
<div class="card">
<div class="column">
<span class="primary-text"><%= entity.name %></span>
<span class="date-stamp"><%= entity.date%></span>
</div>
<div class="column last-col">
<span class="sec-text"><%= entity.amount%></span>
<span><%= button_to image_tag(), group_path(group.id), method: :delete, class: "del-group-btn btn-icon"%></span>
</div>
</div>
<% end %>
<%= link_to "ADD TRANSACTION", new_entity_path, class: "btn" %>
 </div>
</section>