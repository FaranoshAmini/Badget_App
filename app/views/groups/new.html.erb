<header class="page-header">
<h1>New Category</h1>
<%= link_to "SIGN OUT", destroy_user_session_path, method: :delete, class: "btn-icon" %>
</header>
<section class="form-wrapper" id="new-category-form">
<%= form_with model: @new_group do |f| %>
<div class="field">
<%= f.text_field :name, placeholder: "Name" %>
</div>
<div class="field">
<%= f.text_field :icon, placeholder: "Icon URL", class: 'last-input' %>
</div>
<%= f.hidden_field :user_id, value: current_user.id %>
<div class="field">
<%= f.submit :CREATE, class: 'btn' %>
</div>
<% end %>
</section>
